<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.westpac.yaniv.myweather.WeatherForecastActivity">

    <TextView android:id="@+id/weather_title"
        android:text="@string/weather_forcast_title"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView android:id="@+id/forecast_result"
        android:layout_margin="10dp"
        android:layout_centerHorizontal="true"
        android:hint="@string/weather_forcast_na"
        android:layout_below="@id/weather_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:textIsSelectable="false"
        android:textColor="@color/abc_search_url_text_pressed" />

    <TextView android:id="@+id/forecast_result_summary"
        android:hint="@string/weather_forcast_na"
        android:layout_below="@id/forecast_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
